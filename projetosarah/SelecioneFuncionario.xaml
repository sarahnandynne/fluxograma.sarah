<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projetosarah.SelecioneFuncionario">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Frame CornerRadius="10" BorderColor="Gray" Padding="10">
                <StackLayout>
                    <Label Text="SELECIONE UMA OPÇÃO"
                           FontSize="Large"
                           HorizontalOptions="Center"
                           Margin="0,20,0,20"/>
                    <Button Text="CADASTRO DE FUNCIONÁRIO"
                            FontSize="Medium"
                            BackgroundColor="Blue"
                            TextColor="White"
                            Clicked="OnCadastroFuncionarioClicked"
                            HorizontalOptions="FillAndExpand"
                            Margin="0,10"/>
                    <Button Text="LISTA DE FUNCIONÁRIO"
                            FontSize="Medium"
                            BackgroundColor="Blue"
                            TextColor="White"
                             Clicked="OnListaFuncionarioClicked"
                            HorizontalOptions="FillAndExpand"
                            Margin="0,10"/>
                    <Button Text="VOLTAR"
                            FontSize="Medium"
                            BackgroundColor="Yellow"
                            TextColor="Black"
                            Clicked="OnVoltarFuncionarioClicked"
                            HorizontalOptions="Center"
                            Margin="0,30,0,0"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>