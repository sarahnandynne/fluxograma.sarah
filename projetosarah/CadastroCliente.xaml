<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projetosarah.CadastroCliente"
             Title="Cadastro de Cliente">

    <ContentPage.Content>
        <Grid Padding="20">
            <Frame BorderColor="Black"
                    CornerRadius="20"
                    HasShadow="True">
                <StackLayout>

                <Label x:Name="IdLabel"/>
                    <!-- Título -->
                    <Frame BackgroundColor="#FDD7A0"
                            CornerRadius="20"
                            HorizontalOptions="Center"
                            Padding="10">
                        <Label Text="CADASTRO DE CLIENTE"
                                FontSize="20"
                                FontAttributes="Bold"
                                TextColor="Black"
                                HorizontalOptions="Center"/>
                    </Frame>

                    <!-- Campos de Entrada -->
                    <StackLayout Padding="20,40,20,20"
                            Spacing="20">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="NOME:"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                            <Entry x:Name="NomeEntry"
                                    HorizontalOptions="FillAndExpand"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal">
                            <Label Text="TELEFONE:"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                            <Entry x:Name="TelefoneEntry"
                                    HorizontalOptions="FillAndExpand"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal">
                            <Label Text="ENDEREÇO:"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                            <Entry x:Name="EnderecoEntry"
                                    HorizontalOptions="FillAndExpand"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal">
                            <Label Text="CPF:"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"/>
                            <Entry x:Name="CpfEntry"
                                    HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                    </StackLayout>

                    <!-- Botões -->
                    <StackLayout Orientation="Horizontal"
                            HorizontalOptions="Center"
                            Spacing="20">
                        <Button Text="CONFIRMAR"
                                BackgroundColor="#B5E61D"
                                TextColor="Black"
                                Clicked="OnConfirmarClicked"/>
                        <Button Text="ATUALIZAR"
                                BackgroundColor="#A8C3F7"
                                TextColor="Black"
                                Clicked="OnAtualizarClicked"/>
                    </StackLayout>

                    <Button Text="VOLTAR"
                            BackgroundColor="#FFDA8B"
                            TextColor="Black"
                            HorizontalOptions="Center"
                            Margin="0,20,0,0"
                            Clicked="OnVoltarClicked"/>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
